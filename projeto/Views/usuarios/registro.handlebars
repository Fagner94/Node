<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3 class="mt-4">Crie sua conta:</h3>
<div class="card mt-4">
    <div class="card-body">
        <form action="" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" class="form-control" required>
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" required>
            <label for="senha">Senha:</label>
            <input type="password" name="senha" class="form-control" required>
            <label for="senha2" class="mt-4"> Repita a sua senha:</label>
            <input type="password" name="senha2" class="form-control" required>
            <button type="submit" class=" mt-4 btn btn-success">Cria Conta</button>
        </form>
    </div>
</div>